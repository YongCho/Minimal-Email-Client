<Window x:Class="UIBindingWithEmailMessage.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UIBindingWithEmailMessage"
        mc:Ignorable="d"
        Title="Binding Practice with Email Message" Height="350" Width="525">
    <DockPanel>
        <StackPanel DockPanel.Dock="Right" Margin="5">
            <Button Name="btnAdd" Click="btnAdd_Click">Add</Button>
            <Button Name="btnRemove" Margin="0,5" Click="btnRemove_Click">Remove</Button>
            <Button Name="btnUpdate" Click="btnUpdate_Click">Update</Button>
        </StackPanel>
        <ListView Name="lvMessages">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="From" DisplayMemberBinding="{Binding SenderAddress}" />
                    <GridViewColumn Header="To" DisplayMemberBinding="{Binding RecipientAddress}" />
                    <GridViewColumn Header="Subject" DisplayMemberBinding="{Binding Subject}" />
                </GridView>
            </ListView.View>
        </ListView>
    </DockPanel>
</Window>
