<UserControl x:Class="MinimalEmailClient.Views.CreateMessageView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MinimalEmailClient.Views"
        mc:Ignorable="d"
        Height="600" Width="800">

    <Grid>
        <DockPanel>
            <!-- Menu Bar -->
            <Menu DockPanel.Dock="Top" BorderThickness="0" Background="White" BorderBrush="AliceBlue">
                <MenuItem Header="File">
                    <MenuItem Header="Send" />
                    <Separator />
                    <MenuItem Header="Close" />
                </MenuItem>
            </Menu>

            <!-- Toolbar -->
            <ToolBarPanel DockPanel.Dock="Top" Background="White">
                <ToolBar ToolBarTray.IsLocked="True" Background="White">
                    <!-- 'Send' button -->
                    <Button>
                        <StackPanel Orientation="Horizontal">
                            <Image Source="/Images/send.png" Stretch="Uniform" Height="20" Width="20" Margin="0,0,3,0" />
                            <TextBlock Text="Send" VerticalAlignment="Center" />
                        </StackPanel>
                    </Button>
                    <!-- 'Attachment' button -->
                    <Button>
                        <StackPanel Orientation="Horizontal">
                            <Image Source="/Images/attachment.png" Stretch="Uniform" Height="20" Width="20" />
                            <TextBlock Text="Attach" VerticalAlignment="Center" />
                        </StackPanel>
                    </Button>
                </ToolBar>
            </ToolBarPanel>
        </DockPanel>
    </Grid>
</UserControl>
