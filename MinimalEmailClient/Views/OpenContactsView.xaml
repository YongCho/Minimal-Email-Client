<UserControl x:Class="MinimalEmailClient.Views.OpenContactsView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:prism="http://prismlibrary.com/"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MinimalEmailClient.Views"
        mc:Ignorable="d"
        Height="500" Width="280">

    <Grid>
        <ListBox ItemsSource="{Binding Contacts, Mode=OneWay}" SelectedItem="{Binding SelectedContact}" IsSynchronizedWithCurrentItem="True"></ListBox>
    </Grid>
</UserControl>
